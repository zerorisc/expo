name: lowrisc:daric2_dv:otp_ctrl_sim:0.1
description: "OTP_CTRL DV sim target"

filesets:
  files_rtl:
    depend:
      - lowrisc:daric2_ip:otp_ctrl_macro_pkg
      - lowrisc:daric2_ip:otp_ctrl
      - lowrisc:ip:otp_macro

  files_dv:
    depend:
      - lowrisc:dv:mem_bkdr_util
      - lowrisc:daric2_dv:otp_ctrl_test
      - lowrisc:daric2_dv:otp_ctrl_sva
      - lowrisc:daric2_dv:otp_ctrl_cov
    files:
      - tb.sv
    file_type: systemVerilogSource

targets:
  default: &default_target
    toplevel: tb
    filesets:
      - files_rtl
      - files_dv

  sim:
    <<: *default_target
    default_tool: vcs

  lint:
    <<: *default_target
